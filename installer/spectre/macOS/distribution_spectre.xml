<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="1">
    <title>Spectre Version 9.9.9+99</title>
    <license file="terms-of-service.html"/>

    <pkg-ref id="com.dbdone.spectrevst.pkg" version="0" onConclusion="none">spectreVST.pkg</pkg-ref>
    <pkg-ref id="com.dbdone.spectreau.pkg" version="0" onConclusion="none">spectreAU.pkg</pkg-ref>
    <pkg-ref id="com.dbdone.spectreaax.pkg" version="0" onConclusion="none">spectreAAX.pkg</pkg-ref>

    <pkg-ref id="com.dbdone.spectrebasic.pkg" version="0" onConclusion="none">spectreBASIC.pkg</pkg-ref>

    <options customize="always" require-scripts="false" hostArchitectures="x86_64,arm64"/>
    <choices-outline>
        <line choice="spectrebasic"/>
        <line choice="spectrevst"/>
        <line choice="spectreau"/>
        <line choice="spectreaax"/>
    </choices-outline>

    <choice id="spectrebasic"
        title="Basic (required)"
        selected="true"
        enabled="false"
        visible="false">
        <pkg-ref id="com.dbdone.spectrebasic.pkg"/>
    </choice>

    <choice id="spectrevst" title="Spectre Plugin (VST3)" visible="true">
        <pkg-ref id="com.dbdone.spectrevst.pkg"/>
    </choice>
    <choice id="spectreau" title="Spectre Plugin (AU)" visible="true">
        <pkg-ref id="com.dbdone.spectreau.pkg"/>
    </choice>
    <choice id="spectreaax" title="Spectre Plugin (AAX)" visible="true">
        <pkg-ref id="com.dbdone.spectreaax.pkg"/>
    </choice>
</installer-gui-script>
