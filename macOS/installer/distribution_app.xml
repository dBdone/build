<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="1">
    <title>dBdone Version 1.3.0-6</title>
    <license file="terms-of-service.html"/>

    <pkg-ref id="com.dbdone.app.pkg" version="0" onConclusion="none">dBdoneAPP.pkg</pkg-ref>
    <pkg-ref id="com.dbdone.dbdonevst.pkg" version="0" onConclusion="none">dBdoneVST.pkg</pkg-ref>
    <pkg-ref id="com.dbdone.dbdoneau.pkg" version="0" onConclusion="none">dBdoneAU.pkg</pkg-ref>
    <pkg-ref id="com.dbdone.dbdoneaax.pkg" version="0" onConclusion="none">dBdoneAAX.pkg</pkg-ref>

    <options customize="always" require-scripts="false" hostArchitectures="x86_64,arm64"/>
    <choices-outline>
            <line choice="app"/>
            <line choice="dbdonevst"/>
            <line choice="dbdoneau"/>
            <line choice="dbdoneaax"/>
    </choices-outline>
    <choice id="app" title="dBdone App" selected="true" enabled="false" visible="true">
        <pkg-ref id="com.dbdone.app.pkg"/>
    </choice>
    <choice id="dbdonevst" title="dBdone Plugin (VST3)" visible="true">
        <pkg-ref id="com.dbdone.dbdonevst.pkg"/>
    </choice>
    <choice id="dbdoneau" title="dBdone Plugin (AU)" visible="true">
        <pkg-ref id="com.dbdone.dbdoneau.pkg"/>
    </choice>
    <choice id="dbdoneaax" title="dBdone Plugin (AAX)" visible="true">
        <pkg-ref id="com.dbdone.dbdoneaax.pkg"/>
    </choice>
</installer-gui-script>
