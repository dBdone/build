<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="1">
    <title>AI Chords Version 1.2.0-11</title>
    <license file="terms-of-service.html"/>

    <pkg-ref id="com.dbdone.aichordsvst.pkg" version="0" onConclusion="none">aichordsVST.pkg</pkg-ref>
    <pkg-ref id="com.dbdone.aichordsau.pkg" version="0" onConclusion="none">aichordsAU.pkg</pkg-ref>
    <pkg-ref id="com.dbdone.aichordsaax.pkg" version="0" onConclusion="none">aichordsAAX.pkg</pkg-ref>

    <pkg-ref id="com.dbdone.aichordsbasic.pkg" version="0" onConclusion="none">aichordsBASIC.pkg</pkg-ref>
    <pkg-ref id="com.dbdone.aichordssound.pkg" version="0" onConclusion="none">aichordsSOUND.pkg</pkg-ref>

    <options customize="always" require-scripts="false" hostArchitectures="x86_64,arm64"/>
    <choices-outline>
        <line choice="aichordsbasic"/>
        <line choice="aichordssound"/>
        <line choice="aichordsvst"/>
        <line choice="aichordsau"/>
        <line choice="aichordsaax"/>
    </choices-outline>

    <choice id="aichordsbasic"
        title="Basic (required)"
        selected="true"
        enabled="false"
        visible="false">
        <pkg-ref id="com.dbdone.aichordsbasic.pkg"/>
    </choice>

    <choice id="aichordssound"
        title="Piano Sound (required)"
        selected="true"
        enabled="false"
        visible="true">
        <pkg-ref id="com.dbdone.aichordssound.pkg"/>
    </choice>

    <choice id="aichordsvst" title="AI Chords Plugin (VST3)" visible="true">
        <pkg-ref id="com.dbdone.aichordsvst.pkg"/>
    </choice>
    <choice id="aichordsau" title="AI Chords Plugin (AU)" visible="true">
        <pkg-ref id="com.dbdone.aichordsau.pkg"/>
    </choice>
    <choice id="aichordsaax" title="AI Chords Plugin (AAX)" visible="true">
        <pkg-ref id="com.dbdone.aichordsaax.pkg"/>
    </choice>
</installer-gui-script>
